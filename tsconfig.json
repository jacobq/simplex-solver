{
  "compilerOptions": {
    "strictNullChecks": false,
    "allowJs": true,
    "baseUrl": ".",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noEmit": false,
    "paths" : {
      "Simplex/*": ["src/*"]
    },
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "./types/**/*.d.ts",
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "tmp",
    "dist",
    "node_modules",
    "bower_components"
  ]
}
